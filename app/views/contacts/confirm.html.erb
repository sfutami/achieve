<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h3>以下の内容で、送信する。</h3>

<%= form_for(@contact) do |f| %>
  <%= f.hidden_field :name , class: 'form-control' %>
  <%= f.hidden_field :email , class: 'form-control'  %>
　<%= f.hidden_field :content , class: 'form-control'  %>
  <p>Name:<%= @contact.name %></p>
  <p>Email:<%= @contact.email %></p>
　<p>Content:<%= @contact.content %></p>
  <%= f.submit "送信する" ,class: 'btn btn-primary btn-block'  %>
<% end %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :name , class: 'form-control'  %>
  <%= f.hidden_field :email , class: 'form-control'  %>
　<%= f.hidden_field :content , class: 'form-control'  %>
  <%= f.submit "もどる" ,class: 'btn btn-primary btn-block' , name: 'back'%>
<% end %>
  </div>
</div>